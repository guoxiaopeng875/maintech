<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="@dimen/x60"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="?attr/actionBarSize">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ib_back_infoconfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:padding="@dimen/x8"
                        android:src="@mipmap/ic_back_green" />

                    <TextView
                        android:id="@+id/tv_cancel_infoconfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:text="取消报单"
                        android:textColor="@color/black87"
                        android:textSize="15sp" />
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginTop="@dimen/x10"
                android:text="信息确认"
                android:textColor="@color/black87"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_business_and_company"
                style="@style/md_cv_info_confirm"
                android:layout_marginTop="@dimen/x10">

                <RelativeLayout style="@style/md_rl_info_confirm">

                    <TextView
                        android:id="@+id/text_product_comfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品类型"
                        android:textColor="@color/black54"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_product_comfirm"
                        android:layout_marginTop="@dimen/x6"
                        android:text="--"
                        android:textColor="@color/black87"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_type_comfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_product_confirm"
                        android:layout_marginTop="@dimen/x15"
                        android:text="业务类型"
                        android:textColor="@color/black54"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_type_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_type_comfirm"
                        android:layout_marginTop="@dimen/x6"
                        android:text="--"
                        android:textColor="@color/black87"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_company_comfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_type_confirm"
                        android:layout_marginTop="@dimen/x15"
                        android:text="平台方"
                        android:textColor="@color/black54"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_company_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_company_comfirm"
                        android:layout_marginTop="@dimen/x6"
                        android:text="--"
                        android:textColor="@color/black87"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_cartype_comfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_company_confirm"
                        android:layout_marginTop="@dimen/x15"
                        android:text="车辆类型"
                        android:textColor="@color/black54"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_cartype_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_cartype_comfirm"
                        android:layout_marginTop="@dimen/x6"
                        android:text="--"
                        android:textColor="@color/black87"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_business_and_company_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="修改"
                        android:textColor="@color/green87"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_baseinfo_info_confirm"
                style="@style/md_cv_info_confirm"
                android:layout_marginTop="@dimen/x5">

                <RelativeLayout style="@style/md_rl_info_confirm">

                    <TextView
                        android:id="@+id/text_name_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客户姓名"
                        android:textColor="@color/black54"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_name_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_name_confirm"
                        android:layout_marginTop="@dimen/x6"
                        android:text="--"
                        android:textColor="@color/black87"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_mobile_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name_confirm"
                        android:layout_marginTop="@dimen/x10"
                        android:text="联系方式"
                        android:textColor="@color/black54"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_mobile_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_mobile_confirm"
                        android:layout_marginTop="@dimen/x6"
                        android:text="--"
                        android:textColor="@color/black87"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_idcard_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_mobile_confirm"
                        android:layout_marginTop="@dimen/x10"
                        android:text="身份证号码"
                        android:textColor="@color/black54"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_idcard_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_idcard_confirm"
                        android:layout_marginTop="@dimen/x6"
                        android:text="--"
                        android:textColor="@color/black87"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_baseinfo_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="修改"
                        android:textColor="@color/green87"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_upload_file"
                style="@style/md_cv_info_confirm"
                android:layout_marginTop="@dimen/x10">

                <RelativeLayout style="@style/md_rl_info_confirm">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_info_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_file_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="修改"
                        android:textColor="@color/green87"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_remark_confirm"
                style="@style/md_cv_info_confirm"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginBottom="@dimen/x40">

                <RelativeLayout style="@style/md_rl_info_confirm">

                    <TextView
                        android:id="@+id/text_remark_comfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报单备注"
                        android:textColor="@color/black54"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/tv_remark_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_remark_comfirm"
                        android:layout_marginBottom="@dimen/x40"
                        android:layout_marginTop="@dimen/x6"
                        android:background="@null"
                        android:hint="请输入报单备注"
                        android:maxLength="200"
                        android:textColor="@color/black87"
                        android:textColorHint="@color/black54"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_confirm"
        style="@style/md_btn"
        android:layout_alignParentBottom="true"
        android:text="确认报单" />
</RelativeLayout>