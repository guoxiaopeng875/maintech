<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_bg"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/toolbar_ll"
        android:background="@color/toolbar_green">

        <ImageButton
            android:id="@+id/iv_back_pending"
            style="@style/toolbar_iv_rl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/pending_items"
            android:textColor="@color/white"
            android:textSize="18.7sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x7"
        android:background="@drawable/shape_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>