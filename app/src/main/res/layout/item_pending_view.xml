<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        style="@style/margin_start_x13"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x10"
        android:paddingTop="@dimen/x10">
        <!--姓名-->
        <TextView
            android:id="@+id/tv_name_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black87"
            android:textSize="17sp"
            android:textStyle="bold" />
        <!--日期-->
        <TextView
            android:id="@+id/tv_date_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:textColor="@color/black54"
            android:textSize="14sp" />
        <!--状态-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x6">

            <TextView
                android:id="@+id/tv_loan_type_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_loan_type_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/x2"
                android:paddingEnd="@dimen/x5"
                android:paddingStart="@dimen/x5"
                android:paddingTop="@dimen/x1"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_loan_status_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/x7"
                android:textColor="@color/font_pending"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_status_pending"
        android:layout_width="@dimen/x73"
        android:layout_height="@dimen/x27"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/x13"
        android:background="@drawable/shape_btn_green"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <View
        style="@style/line"
        android:layout_alignParentBottom="true" />

</RelativeLayout>