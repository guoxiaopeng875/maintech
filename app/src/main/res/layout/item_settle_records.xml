<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/x12">

        <!--金额-->
        <TextView
            android:id="@+id/tv_amount_settle_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black87"
            android:textSize="16sp"
            android:textStyle="bold" />


        <!--姓名，公司-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x6">

            <TextView
                android:id="@+id/tv_name_settle_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black54"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_company_settle_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x7"
                android:textColor="@color/black54"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x6">

            <TextView
                android:id="@+id/tv_loan_type_settle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_loan_type_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/x2"
                android:paddingEnd="@dimen/x5"
                android:paddingStart="@dimen/x5"
                android:paddingTop="@dimen/x1"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_date_settle_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x7"
                android:textColor="@color/black54"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:padding="@dimen/x12">

        <ImageView
            android:id="@+id/iv_settle_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_status_settle_records"
            android:layout_width="@dimen/x50"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_horizontal"
            android:textColor="@color/black54"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/line"
        android:layout_alignParentBottom="true" />

</RelativeLayout>