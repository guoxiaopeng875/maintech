<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/x12">

        <TextView
            android:id="@+id/tv_amount_withdraw_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black87"
            android:textSize="16sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x6">

            <TextView
                android:id="@+id/tv_bank_withdraw_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black54"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_card_withdraw_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x16"
                android:textColor="@color/black54"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_date_withdraw_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x6"
            android:textColor="@color/black54"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/x12"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_withdraw_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_status_withdraw_records"
            android:layout_width="@dimen/x50"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:textColor="@color/black54"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/line"
        android:layout_alignParentBottom="true" />

</RelativeLayout>