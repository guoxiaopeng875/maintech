<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <style name="MyProgressDialog" parent="@style/MyDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/window_show</item>
        <item name="android:windowExitAnimation">@anim/window_hide</item>
    </style>

    <!--弹窗动画-->
    <style name="bottom_window">
        <item name="android:windowEnterAnimation">@anim/window_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/window_bottom_out</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 自定义 -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/text_blue</item>
    </style>

    <style name="MyToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <style name="MyTheme" parent="AppBaseTheme">
        <!-- 自定义 -->
        <item name="colorPrimary">#0D3167</item>
        <item name="colorPrimaryDark">#0D3167</item>
        <item name="colorAccent">#0D3167</item>
        <item name="toolbarStyle">@style/MyToolBar</item>
    </style>

    <style name="ThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x1</item>
        <item name="android:background">@color/line_login</item>
    </style>

    <!--toolbar-->
    <style name="toolbar_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>
    <!--toolbar返回按钮-->
    <style name="toolbar_back_common" parent="margin_start_x13">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/x8</item>
        <item name="android:paddingBottom">@dimen/x8</item>
        <item name="android:paddingEnd">@dimen/x8</item>
    </style>
    <!--toolbar返回绿色按钮-->
    <style name="toolbar_back_green" parent="toolbar_back_common">
        <item name="android:src">@mipmap/ic_back_green</item>
    </style>
    <!--toolbar返回白色按钮-->
    <style name="toolbar_back_white" parent="toolbar_back_common">
        <item name="android:src">@mipmap/ic_back_white</item>
    </style>

    <!--项目布局左边距x13-->
    <style name="margin_start_x13">
        <item name="android:layout_marginStart">@dimen/x13</item>
    </style>

    <!--项目布局右边距x13-->
    <style name="margin_end_x13">
        <item name="android:layout_marginEnd">@dimen/x13</item>
    </style>

    <!--标题-->
    <style name="md_title" parent="margin_start_x13">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/x40</item>
        <item name="android:textColor">@color/black87</item>
        <item name="android:textSize">26.4sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--底部提交按钮-->
    <style name="md_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x37</item>
        <item name="android:layout_margin">@dimen/x13</item>
        <item name="android:background">@drawable/shape_btn_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15.4sp</item>
    </style>

    <style name="md_cv_info_confirm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/x8</item>
        <item name="android:layout_marginRight">@dimen/x8</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">@dimen/x3</item>
    </style>

    <style name="md_rl_info_confirm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/x15</item>
        <item name="android:layout_marginRight">@dimen/x15</item>
        <item name="android:layout_marginTop">@dimen/x8</item>
        <item name="android:layout_marginBottom">@dimen/x8</item>
    </style>

    <style name="md_rl_d40">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x40</item>
        <item name="android:paddingLeft">@dimen/x15</item>
        <item name="android:paddingRight">@dimen/x15</item>
    </style>

    <style name="md_rl_d40_white" parent="md_rl_d40">
        <item name="android:background">@color/white</item>
    </style>

    <!--toolbar标题样式-->
    <style name="toolbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18.7sp</item>
    </style>

    <style name="process_tab_layout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabBackground">@color/toolbar_bg</item>
        <item name="tabGravity">center</item>

    </style>

    <style name="process_tab_layout_text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15.4sp</item>
        <item name="android:textColor">@color/white70</item>
    </style>

    <!--标签样式-->
    <style name="style_text_tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingEnd">@dimen/x2</item>
    </style>

    <style name="line_black12_d8">
        <item name="android:background">@color/black12</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x8</item>
    </style>

    <style name="line_black12_dp">
        <item name="android:background">@color/black12</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
    </style>

    <style name="textview_style">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">41dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black87</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
